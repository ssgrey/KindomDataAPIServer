<dx:ThemedWindow
    x:Class="KindomDataAPIServer.Views.ConclusionSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:KindomDataAPIServer.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="解释结论设置"
    Width="1200"
    Height="730"
    MinWidth="500"
    MinHeight="320"
    d:DesignHeight="700"
    d:DesignWidth="500"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid Grid.Column="1">
                <Grid.Resources>
                    <Style TargetType="dxe:ColorEdit">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Left" />
                    </Style>
                    <Style TargetType="dxe:TextEdit">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="Width" Value="200" />
                    </Style>
                    <Style TargetType="Label">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="Width" Value="100" />
                    </Style>
                    <Style TargetType="dxe:SpinEdit">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                        <Setter Property="Width" Value="120" />
                        <Setter Property="ShowError" Value="False" />
                    </Style>
                    <Style TargetType="dxe:PopupColorEdit">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="Width" Value="120" />
                    </Style>
                    <Style TargetType="dxe:ComboBoxEdit">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                        <Setter Property="IsTextEditable" Value="False" />
                        <Setter Property="Width" Value="120" />
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" MinHeight="100" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel
                    Height="Auto"
                    Margin="5"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <StackPanel.Resources>
                        <Style TargetType="StackPanel">
                            <Setter Property="Height" Value="30" />
                        </Style>
                    </StackPanel.Resources>
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Label Content="解释结论类型" />
                        <RadioButton
                            x:Name="radioButton4"
                            HorizontalAlignment="Left"
                            Content="测井解释"
                            GroupName="RadioButtonGroup2"
                            IsChecked="{Binding IsPayzon}" />
                        <RadioButton
                            x:Name="radioButton5"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            Content="岩性"
                            GroupName="RadioButtonGroup2"
                            IsChecked="{Binding IsLithology}" />
                        <RadioButton
                            x:Name="radioButton6"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            Content="沉积相"
                            GroupName="RadioButtonGroup2"
                            IsChecked="{Binding IsSedimentaryFacies}" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Label Content="解释结论名称" />
                        <dxe:TextEdit Text="{Binding NewConclusionName}" />
                    </StackPanel>
                </StackPanel>

                <GroupBox
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5"
                    Header="符号映射关系">
                    <dxg:GridControl
                        x:Name="gcConclusionTable"
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="5"
                        IsFilterEnabled="False"
                        ItemsSource="{Binding PolygonList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectionMode="Cell">
                        <dxg:GridControl.Columns>
                            <dxg:GridColumn Width="30" HorizontalHeaderContentAlignment="Center">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox HorizontalAlignment="Center" IsChecked="{Binding RowData.Row.IsChecked}" />
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <dxg:GridColumn
                                FieldName="PolygonName"
                                Header="多边形"
                                HorizontalHeaderContentAlignment="Center"
                                ReadOnly="True" />
                            <dxg:GridColumn
                                AllowEditing="False"
                                FieldName="Color"
                                Header="颜色"
                                HorizontalHeaderContentAlignment="Center"
                                ReadOnly="True">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:PopupColorEditSettings />
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>
                            <dxg:GridColumn
                                Width="200"
                                FieldName="SymbolLibraryName"
                                Header="解释结论"
                                HorizontalHeaderContentAlignment="Center">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="100" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{Binding RowData.Row.SymbolLibraryName, Mode=TwoWay}" />
                                            <Image
                                                Grid.Column="1"
                                                Width="100"
                                                Height="30"
                                                Margin="1"
                                                Source="{Binding RowData.Row.Image, Mode=TwoWay}" />
                                        </Grid>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                        </dxg:GridControl.Columns>
                        <dxg:GridControl.View>
                            <dxg:TableView
                                x:Name="conclusionTableView"
                                AllowColumnFiltering="False"
                                AllowColumnMoving="False"
                                AllowGrouping="False"
                                AllowGroupingSortingBySingleColumnOnly="False"
                                AllowPerPixelScrolling="False"
                                AutoScrollOnSorting="False"
                                EnableImmediatePosting="True"
                                MouseDoubleClick="conclusionTableView_MouseDoubleClick"
                                RowMinHeight="35"
                                ShowGroupPanel="False"
                                ShowIndicator="False"
                                UseLegacyFilterEditor="True"
                                UseLegacyFilterPanel="True" />
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                </GroupBox>

            </Grid>


        </Grid>
        <Button
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Width="90"
            Height="25"
            Margin="5"
            HorizontalAlignment="Right"
            Background="#0173C7"
            Click="Ok_Clicked"
            Content="确定"
            Foreground="White" />
        <!--<Button
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Width="90"
            Height="25"
            Margin="0,5,205,5"
            HorizontalAlignment="Right"
            Click="Cancel_Clicked"
            Content="取消" />
        <Button
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Width="90"
            Height="25"
            Margin="0,5,105,5"
            HorizontalAlignment="Right"
            Click="Apply_Clicked"
            Content="应用" />-->

    </Grid>
</dx:ThemedWindow>
