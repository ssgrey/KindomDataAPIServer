<Window x:Class="KindomDataAPIServer.MainServerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KindomDataAPIServer"
        mc:Ignorable="d"
        Title="Kindom服务" Height="600" Width="800"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 控制面板 -->
        <Border Grid.Row="0" Background="#f0f0f0" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnStartServer" Content="启动服务" 
                        Width="100" Height="35" Margin="5" 
                        Click="btnStartServer_Click" 
                        Background="#4CAF50" Foreground="White" FontWeight="Bold"/>

                <Button x:Name="btnStopServer" Content="停止服务" 
                        Width="100" Height="35" Margin="5" 
                        Click="btnStopServer_Click" IsEnabled="False"
                        Background="#f44336" Foreground="White" FontWeight="Bold"/>

                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="服务状态:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtStatus" Text="已停止" 
                               Foreground="Red" FontWeight="Bold" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="服务地址:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtServiceUrl" Text="未启动" 
                               Foreground="Blue" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 日志显示区 -->
        <Border Grid.Row="1" Margin="10" BorderBrush="#ccc" BorderThickness="1" CornerRadius="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 日志标题栏 -->
                <Border Grid.Row="0" Background="#2196F3" Padding="10" CornerRadius="2,2,0,0">
                    <TextBlock Text="日志输出" Foreground="White" FontWeight="Bold" FontSize="14"/>
                </Border>

                <!-- 日志内容 -->
                <TextBox x:Name="txtLog" Grid.Row="1" 
                         IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="12"
                         Background="#fafafa"
                         BorderThickness="0"
                         Padding="10"/>

                <!-- 操作按钮 -->
                <Border Grid.Row="2" Background="#f5f5f5" Padding="5" CornerRadius="0,0,2,2">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="清空日志" Width="80" Height="25" Margin="5" Click="btnClearLog_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>