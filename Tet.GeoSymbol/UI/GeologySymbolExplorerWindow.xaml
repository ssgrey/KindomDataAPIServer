<dx:ThemedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:local="clr-namespace:Tet.GeoSymbol.UI"
    x:Class="Tet.GeoSymbol.UI.GeologySymbolExplorerWindow"
    Title="GeologySymbolExplorerWindow" Height="800" Width="1000"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <local:GeologySymbolsExplorer x:Name="symbolExplorerView" HorizontalAlignment="Stretch"   VerticalAlignment="Stretch" Margin="5" MouseDoubleClick="OnSymbolViewDoubleClicked"/>
        <WrapPanel Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="5,10,5,10">
            <Button IsDefault="True"  Name="btnDialogOk" Click="OnOKClick"  MinWidth="60" Margin="0,0,10,0">_Ok</Button>
            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </WrapPanel>
    </Grid>
</dx:ThemedWindow>
